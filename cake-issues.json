{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "Use Renovate configuration for Cake.Issues addins",
    "extends": [
        "github>cake-contrib/renovate-presets:cake-recipe"
    ],
    "packageRules": [
        {
            "description": "Group Cake.Issues dependencies",
            "matchManagers": ["nuget"],
            "matchPackagePatterns": [
                "Cake.Issues",
                "Cake.Frosting.Issues"
            ],
            "groupName": "Cake.Issues"
        }
    ]
}
